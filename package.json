{
  "name": "typescript-babel-express-starter",
  "author": "Daniele Rubetti",
  "description": "An example project with TypeScript, Babel and Express",
  "version": "0.2.0",
  "license": "MIT",
  "repository": "github:drubetti/TypeScript-Babel-Express-Starter",
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "build:types": "tsc --emitDeclarationOnly",
    "jest": "jest --runInBand --silent --bail --verbose --expand --passWithNoTests src",
    "prepare": "husky install",
    "start": "babel-node -x \".ts\" src",
    "test": "npm run type-check && npm run jest",
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.13.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.17.1",
    "@types/supertest": "^2.0.11",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.0.1",
    "babel-plugin-source-map-support": "^2.1.3",
    "husky": "^6.0.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.1.3",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "body-parser": "^1.19.0",
    "celebrate": "^14.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "source-map-support": "^0.5.19"
  },
  "jest": {
    "setupFiles": [
      "./src/utils/loadenv.ts"
    ],
    "testEnvironment": "node"
  }
}
