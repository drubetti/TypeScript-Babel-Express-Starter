{
  "name": "typescript-babel-express-starter",
  "author": "Daniele Rubetti",
  "description": "An example project with TypeScript, Babel and Express",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "github:drubetti/TypeScript-Babel-Express-Starter",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "docker-build": "docker build -t typescript-babel-express-starter .",
    "docker-build-dev": "docker build -t typescript-babel-express-starter-dev -f dev.Dockerfile .",
    "docker-start": "docker-compose -f docker-compose.yml up -d",
    "docker-start-dev": "docker run --rm --init -it -p 3000:3000 -v $(pwd):/app typescript-babel-express-starter-dev npm start",
    "jest": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --silent --bail --verbose --expand --passWithNoTests src",
    "lint": "eslint .",
    "prepare": "husky",
    "start": "npm run build:js && node dist",
    "test": "npm run type-check && npm run jest",
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.4",
    "@babel/plugin-syntax-import-assertions": "^7.27.1",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.29.0",
    "@tsconfig/node22": "22.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hapi__joi": "^17.1.15",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.32",
    "@types/supertest": "^6.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^30.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "3.5.3",
    "supertest": "^7.1.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "body-parser": "^2.2.0",
    "celebrate": "^15.0.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFiles": [
      "./src/utils/loadenv.ts"
    ],
    "testEnvironment": "node"
  }
}
