{
  "name": "typescript-babel-express-starter",
  "author": "Daniele Rubetti",
  "version": "0.0.3",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch",
    "build": "npm run type-check && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline --copy-files",
    "start": "npm run build:js && node dist/index.js",
    "test": "npm run build && npm run jest",
    "jest": "jest --runInBand --color --bail --verbose=true --expand ./src/"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-numeric-separator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/runtime": "^7.8.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "jest-environment-node": "^24.9.0",
    "supertest": "^4.0.2",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.6",
    "@types/helmet": "0.0.45",
    "@types/morgan": "^1.7.37",
    "body-parser": "^1.19.0",
    "celebrate": "^11.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1"
  }
}
