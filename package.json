{
  "name": "typescript-babel-express-starter",
  "author": "Daniele Rubetti",
  "description": "An example project with TypeScript, Babel and Express",
  "version": "0.3.5",
  "license": "MIT",
  "repository": "github:drubetti/TypeScript-Babel-Express-Starter",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "build:types": "tsc --emitDeclarationOnly",
    "docker-build": "docker build -t typescript-babel-express-starter .",
    "docker-build-dev": "docker build -t typescript-babel-express-starter-dev -f dev.Dockerfile .",
    "docker-start": "docker-compose -f docker-compose.yml up -d",
    "docker-start-dev": "docker run --rm --init -it -p 3000:3000 -v $(pwd):/app typescript-babel-express-starter-dev npm start",
    "jest": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --silent --bail --verbose --expand --passWithNoTests src",
    "lint": "eslint --ignore-path .gitignore .",
    "prepare": "husky install",
    "start": "npm run build:js && node dist",
    "test": "npm run type-check && npm run jest",
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@tsconfig/node18": "^2.0.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/hapi__joi": "^17.1.9",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "supertest": "^6.3.3",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.21.5",
    "body-parser": "^1.20.2",
    "celebrate": "^15.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFiles": [
      "./src/utils/loadenv.ts"
    ],
    "testEnvironment": "node"
  }
}
