{
  "name": "typescript-babel-express-starter",
  "author": "Daniele Rubetti",
  "description": "An example project with TypeScript, Babel and Express",
  "version": "0.3.8",
  "license": "MIT",
  "repository": "github:drubetti/TypeScript-Babel-Express-Starter",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "docker-build": "docker build -t typescript-babel-express-starter .",
    "docker-build-dev": "docker build -t typescript-babel-express-starter-dev -f dev.Dockerfile .",
    "docker-start": "docker-compose -f docker-compose.yml up -d",
    "docker-start-dev": "docker run --rm --init -it -p 3000:3000 -v $(pwd):/app typescript-babel-express-starter-dev npm start",
    "jest": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --silent --bail --verbose --expand --passWithNoTests src",
    "lint": "eslint --ignore-path .gitignore .",
    "prepare": "husky install",
    "start": "npm run build:js && node dist",
    "test": "npm run type-check && npm run jest",
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.20",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-import-assertions": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@tsconfig/node18": "^18.2.2",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/hapi__joi": "^17.1.11",
    "@types/jest": "^29.5.5",
    "@types/morgan": "^1.9.5",
    "@types/node": "^18.17.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.15",
    "body-parser": "^1.20.2",
    "celebrate": "^15.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFiles": [
      "./src/utils/loadenv.ts"
    ],
    "testEnvironment": "node"
  }
}
