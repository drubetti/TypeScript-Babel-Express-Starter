{
  "name": "typescript-babel-express-starter",
  "author": "Daniele Rubetti",
  "description": "An example project with TypeScript, Babel and Express",
  "version": "0.1.3",
  "license": "MIT",
  "repository": "github:drubetti/TypeScript-Babel-Express-Starter",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch",
    "build": "npm run type-check && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "start": "npm run build:js && node dist/index.js",
    "test": "npm run type-check && npm run jest",
    "jest": "jest --runInBand --color --bail --verbose=true --expand ./src"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.15",
    "@types/morgan": "^1.9.1",
    "@types/supertest": "^2.0.10",
    "babel-jest": "^26.6.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "supertest": "^5.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "babel-core": "^7.0.0-bridge.0",
    "body-parser": "^1.19.0",
    "celebrate": "^13.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "forever": "^3.0.2",
    "helmet": "^4.1.1",
    "morgan": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "setupFiles": [
      "./src/utils/loadenv.ts"
    ],
    "testEnvironment": "node"
  }
}
