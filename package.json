{
  "name": "typescript-babel-express-starter",
  "author": "Daniele Rubetti",
  "description": "An example project with TypeScript, Babel and Express",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "github:drubetti/TypeScript-Babel-Express-Starter",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "docker-build": "docker build -t typescript-babel-express-starter .",
    "docker-build-dev": "docker build -t typescript-babel-express-starter-dev -f dev.Dockerfile .",
    "docker-start": "docker-compose -f docker-compose.yml up -d",
    "docker-start-dev": "docker run --rm --init -it -p 3000:3000 -v $(pwd):/app typescript-babel-express-starter-dev npm start",
    "jest": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --silent --bail --verbose --expand --passWithNoTests src",
    "lint": "eslint .",
    "prepare": "husky",
    "start": "npm run build:js && node dist",
    "test": "npm run type-check && npm run jest",
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.7",
    "@babel/plugin-syntax-import-assertions": "^7.26.0",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.19.0",
    "@tsconfig/node22": "22.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/hapi__joi": "^17.1.15",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.0",
    "@types/supertest": "^6.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "3.4.2",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.7",
    "body-parser": "^1.20.3",
    "celebrate": "^15.0.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFiles": [
      "./src/utils/loadenv.ts"
    ],
    "testEnvironment": "node"
  }
}
