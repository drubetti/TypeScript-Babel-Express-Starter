{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"includes": [
			"**",
			"!**/package.json",
			"!**/package-lock.json",
			"!**/tsconfig.json"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
