{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"ignore": ["dist"],
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"ignore": ["dist", "package.json", "package-lock.json"],
		"indentSize": 1
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
